/home/bifrost/logs/*.log {
    hourly
    missingok
    dateext
    rotate 3
    compress
    delaycompress
    notifempty
    create 0640 nobody nogroup
    sharedscripts
    postrotate
        # Send SIGUSR1 to bifrost-master to trigger log rotation
        # usage of '|| true' ensures logrotate doesn't fail if the service is not running
        pkill -USR1 -x bifrost-master || true
    endscript
}